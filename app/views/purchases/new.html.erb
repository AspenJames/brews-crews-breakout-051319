<%# <h1>Purchases#new</h1> %>

<%= form_for @purchase do |f| %>
	<%= f.label :customer_name %>
	<%= f.text_field :customer_name %>

	<%= f.label :price %>
	<!-- "step" sets the float precision value -->
	<%= f.number_field :price, :step => "0.01" %>

	<%= f.collection_select :brew_id, @brews, :id, :blend_name %>

	<%= f.submit %>
<% end %>